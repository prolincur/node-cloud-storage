{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@teknologi-umum/eslint-config-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "block-spacing": [
      "error",
      "always"
    ]
  }
}